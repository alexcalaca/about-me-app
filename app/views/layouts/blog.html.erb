  <meta name="keywords" content="<%= @seo_keywords %>" />
  
  <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="alert"><%= notice %></p>
